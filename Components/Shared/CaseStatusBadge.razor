@using better_call_saul.Models

<span class="badge @GetStatusClass()">@Status.ToString()</span>

@code {
    [Parameter]
    public CaseStatus Status { get; set; }

    private string GetStatusClass()
    {
        return Status switch
        {
            CaseStatus.New => "bg-primary text-white",
            CaseStatus.InReview => "bg-warning text-dark",
            CaseStatus.NeedsMoreInfo => "bg-info text-dark",
            CaseStatus.Completed => "bg-success text-white",
            CaseStatus.Closed => "bg-secondary text-white",
            _ => "bg-secondary text-white"
        };
    }
}