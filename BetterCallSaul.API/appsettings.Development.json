{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  },
  "Application": {
    "Environment": "Development",
    "Urls": "https://localhost:7191;http://localhost:5191"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BetterCallSaul;Trusted_Connection=true;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=BetterCallSaul.db"
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "BetterCallSaul.API",
    "Audience": "BetterCallSaul.Client",
    "ExpiryMinutes": 60
  },
  "LocalStorage": {
    "BasePath": "uploads"
  },
  "NoSql": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BetterCallSaulDev",
    "MaxRetryAttempts": 3,
    "OperationTimeoutSeconds": 30,
    "EnableDetailedLogging": true,
    "BatchSize": 100
  },
  "AWS": {
    "Bedrock": {
      "Region": "us-east-1",
      "ModelId": "anthropic.claude-v2"
    },
    "S3": {
      "BucketName": "better-call-saul",
      "Region": "us-east-1"
    },
    "Textract": {
      "Region": "us-east-1"
    }
  }
}
