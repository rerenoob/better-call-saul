{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  },
  "Application": {
    "Environment": "Development",
    "Urls": "https://localhost:7191;http://localhost:5191"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BetterCallSaul;Trusted_Connection=true;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=BetterCallSaul.db"
  },
  "JwtSettings": {
    "SecretKey": "",
    "Issuer": "BetterCallSaul.API",
    "Audience": "BetterCallSaul.Client",
    "ExpiryMinutes": 60
  },
  "AzureOpenAI": {
    "Endpoint": "",
    "ApiKey": "",
    "DeploymentName": "gpt-4",
    "Model": "gpt-4",
    "MaxRetries": 3,
    "TimeoutSeconds": 30,
    "Temperature": 0.3,
    "MaxTokens": 2000
  }
}
