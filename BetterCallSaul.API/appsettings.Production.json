{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.ApplicationInsights"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Application": {
    "Name": "BetterCallSaul API",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:bettercallsaul-db-server.database.windows.net,1433;Database=BetterCallSaul;User ID=bettercallsaul-admin;Password={YourPassword};Trusted_Connection=false;MultipleActiveResultSets=true;Encrypt=true;TrustServerCertificate=false"
  },
  "JwtSettings": {
    "SecretKey": "{YourJwtSecretKey}",
    "Issuer": "BetterCallSaul.API",
    "Audience": "BetterCallSaul.Client",
    "ExpiryMinutes": 60
  },
  "AzureOpenAI": {
    "EndpointFromConfig": "https://bettercallsaul-openai.openai.azure.com/",
    "ApiKeyFromConfig": "{YourAzureOpenAIApiKey}",
    "DeploymentName": "gpt-4",
    "Model": "gpt-4",
    "MaxRetries": 3,
    "TimeoutSeconds": 30,
    "Temperature": 0.3,
    "MaxTokens": 2000
  },
  "AzureBlobStorage": {
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=bettercallsaulstorage;AccountKey={YourStorageAccountKey};EndpointSuffix=core.windows.net",
    "ContainerName": "documents",
    "UseAzureStorage": true,
    "SasTokenExpiryMinutes": 60,
    "MaxRetries": 3,
    "RetryDelayMilliseconds": 1000
  },
  "AzureFormRecognizer": {
    "EndpointFromConfig": "https://bettercallsaul-formrecognizer.cognitiveservices.azure.com/",
    "ApiKeyFromConfig": "{YourFormRecognizerApiKey}",
    "ModelId": "prebuilt-document",
    "MaxRetries": 3,
    "TimeoutSeconds": 60,
    "ConfidenceThreshold": 0.7,
    "IncludeFieldElements": true,
    "PollingIntervalMs": 3000,
    "MaxPollingTimeMs": 120000
  }
}